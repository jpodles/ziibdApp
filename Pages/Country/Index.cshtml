@page
@model ziibdApp.Pages.Country.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Państwa</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Dodaj nowe państwo</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Countries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region.RegionId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CountryId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.CountryId" class="btn btn-light">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.CountryId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
