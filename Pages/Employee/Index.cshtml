@model ziibdApp.Pages.Employee.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pracownicy</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Dodaj nowego pracownika</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FirstName)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].PhoneNumber)
            </th>
            @*
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].HireDate)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Salary)
            </th>
            <!--<th>
            Pct-->
            @*@Html.DisplayNameFor(model => model.Employees[0].CommissionPct)*@
            <!--</th>-->
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Manager)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.HireDate)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CommissionPct)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.JobId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.EmployeeId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.EmployeeId" class="btn btn-light">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>