@page
@model ziibdApp.Pages.Job.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Stanowiska</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Dodaj nowe stanowisko</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jobs[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs[0].MaxSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Jobs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxSalary)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.JobId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.JobId" class="btn btn-light">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.JobId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
