@page
@model ziibdApp.Pages.Location.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lokalizacja</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Dodaj nową lokalizację</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locations[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations[0].StateProvince)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Locations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StateProvince)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.CountryId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.LocationId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.LocationId" class="btn btn-light">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.LocationId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
