@page
@model ziibdApp.Pages.Region.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Regiony</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Dodaj nowy region</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Regions[0].RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Regions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RegionId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.RegionId" class="btn btn-light">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.RegionId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
